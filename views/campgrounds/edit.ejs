<% layout('layouts/boilerplate') %>
    <h1 class="text-center mb-3">Update Spot</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/spots/<%= campground._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title : </label>
                    <input class="form-control" required type="text" id="title" name="title"
                        placeholder="Enter the place" value="<%= campground.title %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter the title
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location : </label>
                    <input class="form-control" required type="text" id="location" name="location"
                        placeholder="Enter the location" value="<%= campground.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price : </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input id="price" required type="text" class="form-control" placeholder="0.00"
                            aria-label="price" aria-describedby="price" name="price" value="<%= campground.price %>">
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" required type="text" id="image" name="image" placeholder="URL"
                        value="<%= campground.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description : </label>
                    <textarea class="form-control" required id="description" name="description"
                        placeholder="Enter the description"><%= campground.description %> </textarea>
                </div>
                <button class="btn btn-success">Update</button>
            </form>
            <a class="btn btn-info mt-3" href="/spots">Cancel</a>
        </div>
    </div>